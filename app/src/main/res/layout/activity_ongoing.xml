<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTimeRemains"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time Remaining"
                    android:textAlignment="center"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="56sp" />

                <Button
                    android:id="@+id/bArrived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i've arrived"/>
                <Button
                    android:id="@+id/bLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i've left"/>

                <Button
                    android:id="@+id/bShowQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="show qr code"
                    android:background="#F57C00"
                    android:textColor="#FFFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="SUMMARY"
                    android:textSize="24sp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSlotNo"
                    android:textSize="72sp"
                    android:textAlignment="center"
                    android:text="A123"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="view slot"
                    android:id="@+id/bViewSlot"
                    android:background="#F57C00"
                    android:textColor="#FFFF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:text="Arrival Time"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvArrivalTime"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:text="12.00"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:text="Leaving Time"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLeavingTime"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:text="15.00"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:text="Price"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPrice"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:text="Rp100.000"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"/>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cancel booking"
                    android:id="@+id/bCancelRes"
                    android:background="@color/red"
                    android:textColor="#FFFF"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
